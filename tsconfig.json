{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": "./",
    "sourceMap": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"]
  },
  "include": ["js/**/*.ts", "src/js/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}